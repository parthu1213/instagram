<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <% if current_user.avatar.present? %>
        <img src="<%= url_for(current_user.avatar) %>">
        <% else %>
        <img src="assets/profile.png">
        <% end %>
      </div>
    </div>

    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username"><%= current_user.username %></h2>
        <a class="edit-profile" href="<%= edit_user_path(current_user.id) %>">
          <button>Edit Profile</button>
        </a>
      </div>
      <ul class="posts">
        <li><span><%= current_user.posts.all.count %></span> posts</li>
        <li><span>1178</span> followers</li>
        <li><span>188</span> following</li>
      </ul>
      <h2 class="name"><%= current_user.name %></h2>
      <a class="website"><%= current_user.website %></a>
    </div>
  </div>
</div>


<div class="user-tabs">
  <a class="tab active" href="<%= posts_path %>">
    <i class="fa fa-th"></i>
    POSTS
  </a>
  <a class="tab" href="<%= igtvs_path %>">
    <i class="fa fa-tv"></i>
    IGTV
  </a>
  <a class="tab" href="<%= saveds_path %>">
    <i class="fa fa-bookmark"></i>
    SAVED
  </a>
  <a class="tab" href="<%= taggeds_path %>">
    <i class="fa fa-tag"></i>
    TAGGED
  </a>
</div>
